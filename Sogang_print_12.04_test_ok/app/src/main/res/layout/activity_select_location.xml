<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.androidtown.sogang_print._2_Select_location"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/linearLayout">
        <TextView
            android:background="@color/red"
            android:textColor="@color/white"

            android:text="장소 선택"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/textView7"
            android:textSize="24sp"
            android:layout_weight="0.05"
            android:gravity="center"
            android:padding="4dp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/map"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">


        <ImageButton
            android:layout_marginLeft="115dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="102dp"
            app:srcCompat="@drawable/d"
            android:id="@+id/location_d"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.21" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_marginTop="40dp"
        android:layout_marginLeft="130dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="80dp"
        app:srcCompat="@drawable/loyola"
        android:id="@+id/location_loyola"
        android:layout_height="110dp"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_marginLeft="90dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/j"
            android:id="@+id/location_j"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp" />

        <ImageButton
            android:layout_marginTop="30dp"
            android:layout_marginLeft="80dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="60dp"
            app:srcCompat="@drawable/r"
            android:id="@+id/location_r"
            android:layout_height="71dp" />
    </LinearLayout>


</LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageButton
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="61dp"
        app:srcCompat="@drawable/ma"
        android:id="@+id/location_ma"
        android:layout_height="67dp" />

    <ImageButton
        android:layout_marginTop="70dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="50dp"
        app:srcCompat="@drawable/ga"
        android:id="@+id/location_ga"
        android:layout_height="50dp"
        android:layout_weight="1" />

</LinearLayout>

            <ImageButton
                android:layout_marginTop="40dp"
                android:layout_marginLeft="130dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/k"
                android:id="@+id/location_k"
                android:layout_height="120dp" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>