<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity__01__register"
    android:layout_width="320dip"
    android:layout_height="400dip"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.androidtown.sogang_print._01_Register"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/linearLayout">
        <TextView
            android:background="@color/red"
            android:textColor="@color/white"
            android:text="  가입 하기"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/textView7"
            android:textSize="24sp"
            android:layout_weight="0.05"
            android:gravity="center_vertical"
            android:padding="4dp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="학번"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_weight="2.5"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="학번 8자리 입력"
            android:text=""
            android:ems="10"
            android:id="@+id/regi_id"
            android:layout_weight="3"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="이름"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView121"
            android:layout_weight="2.5"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="실명 입력"
            android:ems="10"
            android:id="@+id/regi_name"
            android:layout_weight="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="비밀번호"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_weight="2.5"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text=""
        android:ems="10"
        android:hint="비밀번호 입력"
        android:id="@+id/regi_pw"
        android:layout_weight="3" />

</LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="비밀번호 확인"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_weight="2.5"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text=""
            android:hint="비밀번호 입력확인"
            android:ems="10"
            android:id="@+id/regi_pwconfirm"
            android:layout_weight="3" />

    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="@drawable/xml_border_button"
        android:text="  가입하기  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regi_register_button"
        android:textSize="20sp"
        android:textStyle="normal|bold" />
</LinearLayout>
