<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_doc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.androidtown.sogang_print._3_Select_doc"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/linearLayout">
        <TextView
            android:background="@color/red"
            android:textColor="@color/white"
            android:text="문서 추가"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/textView7"
            android:textSize="24sp"
            android:layout_weight="0.05"
            android:gravity="center"
            android:padding="4dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/left"
            android:id="@+id/imageView2"
            android:layout_weight="0.05"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_weight="1">

        <ListView
            android:text="FileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@android:id/list"
            android:textSize="24dp"/>
    </LinearLayout>

    <Button
        android:text=" + 첨부파일 업로드"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/find_doc_button"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/xml_border_button"
        android:textStyle="normal|bold" />

    <Button
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/xml_border_button"
        android:text="프린트 하러가기"
        android:layout_height="wrap_content"
        android:id="@+id/select_doc_button"
        android:layout_width="120dp"
        android:textStyle="normal|bold" />

</LinearLayout>
