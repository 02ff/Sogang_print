<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_set_doc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.androidtown.sogang_print._4_Set_doc"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <TextView
            android:background="@color/red"
            android:textColor="@color/white"
            android:text="인쇄물 레이아웃 설정"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/textView7"
            android:textSize="24sp"
            android:layout_weight="0.05"
            android:gravity="center"
            android:padding="4dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
        android:layout_weight="2"
        android:textColor="#000000"
        android:text="Size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/size_text"
        android:textSize="24sp"/>

        <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/size_spinner"
        android:layout_weight="1"
        android:entries="@array/direction" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="2"
            android:textColor="#000000"
            android:text="Color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/col_text"
            android:textSize="24sp"/>

        <Spinner
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/color_spinner"
        android:entries="@array/color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

    <TextView
        android:layout_weight="2"
        android:textColor="#000000"
        android:text="Face"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/face_text"
        android:textSize="24sp"/>

    <Spinner
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/face"
        android:id="@+id/face_spinner" />
    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="2"
            android:textColor="#000000"
            android:text="Num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/num_text"
            android:textSize="24sp"/>

        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/face"
            android:id="@+id/num_edit" />
    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="설정 완료"
        android:background="@drawable/xml_border_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_doc_button"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

</LinearLayout>
